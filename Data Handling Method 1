# THIS FILE IS FOR DATE AND TIME IN FILE NAME


## Libraries ##

import os
from datetime import datetime


## Variables ##

ID = 1
current_time = datetime.now()
file_path = ''
file_name = r"C:\Users\ggunn\Documents\RSTest\\" + "#" + str(ID) + '.txt'

## Main ## 

while True:
    if file_name[:1].isnumeric(): #If char 1 is a number (first file has been created already)
        pass
    else:
        ID += 1
        file_path = r'C:\Users\ggunn\Documents\RSTest\#' + str(ID) + ' ' + current_time.strftime('%d-%m-%Y %Hhr-%Mmin-%Ssec') + '.txt' #Update the file path to the new ID
        break 
    
    if file_name[:2].isnumeric(): #If char 2 is a number (double digit file has already been created)
        pass
    else: #Double digit hasnt been reached (keep adding to ID)
        ID += 1
        file_path = r'C:\Users\ggunn\Documents\RSTest\#' + str(ID) + ' ' + current_time.strftime('%d-%m-%Y %Hhr-%Mmin-%Ssec') + '.txt' #Update the file path to the new ID
        break 

#check character after #
#check if the character after that is a number, if so repeat
#once char is not a number, end loop and create next file in sequence
